@page "{id:int}"
@model ProiectWeb.Pages.Admin.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this product?</strong>
</div>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Product.Name</dd>

    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Product.Category</dd>

    <dt class="col-sm-2">Quantity</dt>
    <dd class="col-sm-10">@Model.Product.Quantity</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Product.Price</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Product.Description</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Product.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
