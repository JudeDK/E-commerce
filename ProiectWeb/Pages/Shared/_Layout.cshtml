@using Microsoft.AspNetCore.Identity
@using ProiectWeb.Models
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    // 🧠 Extragem nickname-ul utilizatorului conectat, dacă există
    string nickname = "guest";
    if (SignInManager.IsSignedIn(User))
    {
        var u = UserManager.GetUserAsync(User).GetAwaiter().GetResult();
        nickname = u?.Nickname ?? "guest";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProiectWeb</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProiectWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/chatbox.css" />
</head>

<body data-user="@nickname" class="layout-wrapper">
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">ProiectWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Products/Index">Admin Panel</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Notifications/Index">Notifications</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Orders/Index">Comenzi</a>
                                </li>
                            }
                            else if (User.IsInRole("User"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Client/Products/Index">Products</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Client/Cart/Index">🛒 Coș</a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <main class="flex-grow-1">
        <div class="container pb-3">
            @RenderBody()
        </div>
    </main>

    <!-- 💬 Chatbox - doar pentru utilizatorii logați cu rol "User" -->
    @if (SignInManager.IsSignedIn(User) && User.IsInRole("User"))
    {
        <div id="chat-container">
            <button id="chat-toggle">💬</button>
            <div id="chat-box" class="hidden">
                <div id="chat-messages" style="max-height: 300px; overflow-y: auto;"></div>
                <div class="chat-input-area">
                    <input type="text" id="chat-input" placeholder="Scrie un mesaj..." />
                    <button id="chat-send">Trimite</button>
                </div>
            </div>
        </div>
    }

    <!-- Footer -->
    <footer>
        <div class="container small text-center text-muted mt-4">
            © 2025 - ProiectWeb • <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/chatbox.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
